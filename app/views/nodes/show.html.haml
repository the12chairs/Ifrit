%p#notice= notice

%div.thread
  %table 
    %tr
      %td= @node.head
    %tr
      %td
        %div.picture= link_to( image_tag( @node.picture_url(:thumb).to_s), @node.picture_url) if @node.picture?
        %div= parser(@node.body)
  %table    
    %td= @node.number
    %td= @node.created_at.strftime("%d %b %Y, %H:%M")
      
%h2 Comments:

= render @node.comments

%hr
%br

New comment:

= render 'comments/form'

= link_to 'Back', board_path(@node.board)
